@using Mvc4Architecture.Models
@model IEnumerable<PersonTdVM>
@{
    ViewBag.Title = "Index";
}
@section scripts{
    @*@Scripts.Render("~/bundles/jqueryui")*@
}
@Html.Hidden("AddressAction", @Url.Action("GetPersonAddresses"))
<h2>
    Index</h2>
<div class="personList">
    <table>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Addresses
            </th>
        </tr>
        @foreach (var personVM in Model)
        { 
            @Html.Partial("_PersonTd", personVM)
        }
    </table>
</div>
<div id="personDetails">
</div>

